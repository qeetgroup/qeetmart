# Server
PORT=4000
HOST=0.0.0.0
TRUST_PROXY=false

# CORS
# Prefer CORS_ORIGINS (comma-separated). CORS_ORIGIN is kept for backwards compatibility.
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Request body parsing
JSON_BODY_LIMIT=1mb
URLENCODED_EXTENDED=true

# Gateway behavior
REQUIRE_AUTH=false
GATEWAY_PROXY_TIMEOUT_MS=5000

# Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# Downstream services
AUTH_SERVICE_URL=http://localhost:4006
USER_SERVICE_URL=http://localhost:4001
PRODUCT_SERVICE_URL=http://localhost:4002
ORDER_SERVICE_URL=http://localhost:4003
PAYMENT_SERVICE_URL=http://localhost:4004
INVENTORY_SERVICE_URL=http://localhost:4005
