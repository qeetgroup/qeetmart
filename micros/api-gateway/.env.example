# Server
PORT=4000
HOST=0.0.0.0
TRUST_PROXY=false

# CORS
# Prefer CORS_ORIGINS (comma-separated). CORS_ORIGIN is kept for backwards compatibility.
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Request body parsing
JSON_BODY_LIMIT=1mb
URLENCODED_EXTENDED=true

# Gateway behavior
REQUIRE_AUTH=true
GATEWAY_PROXY_TIMEOUT_MS=5000
JWT_SECRET=CHANGE_ME_TO_A_STRONG_BASE64_OR_RAW_SECRET
JWT_ISSUER=http://localhost:8081
# Optional. When set, JWT `aud` must match exactly.
# JWT_AUDIENCE=qeetmart

# Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# Downstream services
AUTH_SERVICE_URL=http://localhost:8081
USER_SERVICE_URL=http://localhost:8082
PRODUCT_SERVICE_URL=http://localhost:8083
ORDER_SERVICE_URL=http://localhost:8084
PAYMENT_SERVICE_URL=http://localhost:8085
INVENTORY_SERVICE_URL=http://localhost:8080
