{
  "name": "@qeetmart/root",
  "version": "0.0.1",
  "description": "Ecommerce Application",
  "homepage": "https://github.com/qeetgroup/qeetmart#readme",
  "bugs": {
    "url": "https://github.com/qeetgroup/qeetmart/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qeetgroup/qeetmart.git"
  },
  "license": "MIT",
  "author": "Qeet Group",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "generate:tree": "struct -i .next -i target -i dist -i .pnpm-store -i .cache -o project.tree",
    "dev:gateway": "pnpm --filter @qeetmart/api-gateway dev",
    "dev:web": "pnpm --filter web dev",
    "dev:web:clean": "pkill -f next || true && rm -rf apps/web/.next && pnpm --filter web dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:docs": "pnpm --filter docs dev",
    "dev:mobile": "pnpm --filter mobile start",
    "dev": "pnpm -r --parallel --filter @qeetmart/shared --filter @qeetmart/api-gateway --filter web --filter admin dev",
    "build:gateway": "pnpm --filter @qeetmart/api-gateway build",
    "build:shared": "pnpm --filter @qeetmart/shared build",
    "build:web": "pnpm --filter web build",
    "build:admin": "pnpm --filter admin build",
    "build:docs": "pnpm --filter docs build",
    "build": "pnpm build:shared && pnpm build:gateway && pnpm build:web && pnpm build:admin && pnpm build:docs",
    "test:gateway": "pnpm --filter @qeetmart/api-gateway build",
    "test:auth-service": "cd micros/auth-service && ./mvnw -B test",
    "test:user-service": "cd micros/user-service && ./mvnw -B test",
    "test:product-service": "cd micros/product-service && ./mvnw -B test",
    "test:inventory-service": "cd micros/inventory-service && GOCACHE=../../.cache/go-build go test ./...",
    "contracts:lint": "node tools/ci/openapi-lint.mjs",
    "contracts:breaking": "node tools/ci/openapi-breaking.mjs",
    "docs:sync:openapi": "pnpm --filter docs sync:openapi",
    "docs:sync:readmes": "pnpm --filter docs sync:readmes",
    "docs:search:index": "pnpm --filter docs search:index",
    "docs:drift:check": "pnpm --filter docs check:drift",
    "docs:validate": "pnpm --filter docs check:content",
    "docs:generate:clients": "pnpm --filter docs generate:clients",
    "docker:up": "docker compose -f docker-compose.dev.yml up --build",
    "docker:down": "docker compose -f docker-compose.dev.yml down -v"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@structure-codes/cli": "^0.0.6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^19.0.0",
        "@types/react": "^19.2.0"
      }
    },
    "packageExtensions": {
      "react-copy-to-clipboard@*": {
        "peerDependencies": {
          "react": "^15.3.0 || 16 || 17 || 18 || 19"
        }
      },
      "react-debounce-input@*": {
        "peerDependencies": {
          "react": "^15.3.0 || 16 || 17 || 18 || 19"
        }
      },
      "react-inspector@*": {
        "peerDependencies": {
          "react": "^16.8.4 || ^17.0.0 || ^18.0.0 || ^19.0.0"
        }
      }
    },
    "onlyBuiltDependencies": [
      "@scarf/scarf",
      "@tree-sitter-grammars/tree-sitter-yaml",
      "core-js-pure",
      "esbuild",
      "sharp",
      "tree-sitter",
      "tree-sitter-json",
      "unrs-resolver"
    ]
  }
}
